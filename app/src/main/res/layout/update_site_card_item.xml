<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:layout_margin="4dp"
         >
        <LinearLayout
            android:layout_width="match_parent"            android:layout_height="wrap_content"
            android:orientation="vertical" android:paddingLeft="5dip" android:paddingRight="2dip"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:gravity="right"
                >


                <ImageButton
                    android:layout_width="wrap_content" android:background="@drawable/delete"  android:id="@+id/deleterecord"
                    android:layout_height="wrap_content" android:visibility="gone" android:gravity="left"
                    />

                <ImageButton
                    android:layout_width="wrap_content" android:background="@drawable/edit"  android:id="@+id/editrecord"
                    android:layout_height="wrap_content" android:gravity="right" android:layout_gravity="right"
                    />


                <ImageButton
                    android:layout_width="wrap_content" android:background="@drawable/save"  android:id="@+id/saverecord"
                    android:layout_height="wrap_content" android:visibility="gone" android:gravity="right" android:layout_gravity="right"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"            android:layout_height="wrap_content" android:paddingLeft="5dip"
            android:orientation="vertical"  android:background="@drawable/list_background"  >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="2"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:enabled="false" android:textColor="@color/textcolor"
                android:text="Name:" android:maxLines="1" android:textStyle="bold"
                android:textAppearance="?android:textAppearanceSmall" />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent" android:layout_weight="1"
                android:layout_height="wrap_content" android:enabled="false" android:textColor="@color/textcolor"
                android:text="material name"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
               android:maxLines="1" android:textColor="@color/textcolor" android:gravity="left"
                android:layout_width="wrap_content" android:text="Date:" android:enabled="false"
                android:layout_height="wrap_content"  android:textStyle="bold"


                android:textAppearance="?android:textAppearanceSmall" />
            <EditText
                android:id="@+id/date" android:layout_weight="1"  android:textColor="@color/textcolor"
                android:layout_width="match_parent" android:text="paidby" android:enabled="false"
                android:layout_height="wrap_content" android:inputType="date"


                android:textAppearance="?android:textAppearanceSmall" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:weightSum="2"
                >
                <TextView
                    android:maxLines="1" android:textColor="@color/textcolor" android:gravity="left"
                    android:layout_width="wrap_content" android:text="Paid By:" android:enabled="false"
                    android:layout_height="wrap_content" android:textStyle="bold"


                    android:textAppearance="?android:textAppearanceSmall" />
                <EditText
                    android:id="@+id/paidby" android:layout_weight="1" android:textColor="@color/textcolor"
                    android:layout_width="match_parent" android:text="paidby" android:enabled="false"
                    android:layout_height="wrap_content"


                    android:textAppearance="?android:textAppearanceSmall" />
                <TextView
                    android:maxLines="1"
                    android:layout_width="wrap_content" android:text="Qty:" android:textStyle="bold"
                    android:layout_height="wrap_content" android:enabled="false"
                    android:textColor="@color/textcolor"

                    android:textAppearance="?android:textAppearanceSmall" />
                <EditText
                    android:id="@+id/qty"
                    android:layout_width="match_parent" android:text="qty:" android:layout_weight="1"
                    android:layout_height="wrap_content" android:enabled="false"
                    android:textColor="@color/textcolor" android:inputType="numberDecimal"

                    android:textAppearance="?android:textAppearanceSmall" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="2"
            >

            <TextView
                android:maxLines="1"
                android:layout_width="wrap_content" android:text="Price:" android:textStyle="bold"
                android:layout_height="wrap_content" android:enabled="false"
                android:textColor="@color/textcolor"

                android:textAppearance="?android:textAppearanceSmall" />
            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent" android:text="price" android:layout_weight="1"
                android:layout_height="wrap_content" android:enabled="false" android:inputType="numberDecimal"
                android:textColor="@color/textcolor"

                android:textAppearance="?android:textAppearanceSmall" />
            <TextView
                android:maxLines="1" android:enabled="false"
                android:layout_width="wrap_content" android:text="Total:" android:textStyle="bold"
                android:layout_height="wrap_content"

                android:textColor="@color/textcolor"
                android:textAppearance="?android:textAppearanceSmall" />
            <EditText
                android:id="@+id/total"  android:enabled="false"
                android:layout_width="match_parent" android:text="total"  android:layout_weight="1"
                android:layout_height="wrap_content"

                android:textColor="@color/textcolor"
                android:textAppearance="?android:textAppearanceSmall" />
</LinearLayout>


</LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
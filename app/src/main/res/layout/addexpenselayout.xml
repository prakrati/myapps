<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent" android:layout_marginTop="5dip"
            android:layout_height="wrap_content"  android:layout_marginBottom="5dip" >
            <TextView
                android:text="Add Expense" android:textSize="18sp" android:textColor="@color/textcolor"
                android:layout_width="match_parent" android:gravity="center" android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Site" android:textSize="18sp" android:textColor="@color/textcolor" android:paddingLeft="10dip"
                android:layout_width="match_parent" android:gravity="left" android:id="@+id/titlesitename"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent" android:paddingBottom="5dip" android:layout_marginTop="5dip" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:layout_height="wrap_content" android:background="@drawable/list_background" android:layout_marginBottom="5dip" >
            <TextView
                android:text="Select Expense" android:textSize="18sp" android:textColor="@color/textcolor"
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent" android:background="@drawable/dialog_bg"
                android:layout_height="wrap_content" android:weightSum="1">
            <Spinner
               android:spinnerMode="dropdown" android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content"  android:popupBackground="@drawable/dialog_bg"
                android:id="@+id/spinner" android:layout_weight="1"/>

                </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent" android:visibility="gone"  android:id="@+id/materiallayout"
            android:layout_height="wrap_content" android:background="@drawable/list_background">
            <TextView
                android:text="Material" android:textSize="18sp" android:textColor="@color/textcolor"
                android:layout_width="match_parent" android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"  android:paddingLeft="5dip"
                    android:text="Name"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/materialname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"  android:paddingLeft="5dip"
                    android:text="Date"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/setmydate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8" android:singleLine="true"

                        android:gravity="center" android:inputType="date"

                        android:textColor="@color/textcolor"/>

                    <ImageView
                        android:id="@+id/materialdt"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"

                        android:src="@drawable/gtc" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/eee"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Unit Price"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/materialuntiprice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:maxLength="12"
                    android:gravity="center" android:inputType="numberDecimal"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/sss"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Quantity"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/materiaqty" android:inputType="numberDecimal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:maxLength="12"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/ddd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Paid By"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/paidmatbyval"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#8b4513"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"  android:id="@+id/materialtotalcostlay">

                <TextView
                    android:id="@+id/sitename"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Total Cost"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/materialtotalcost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#8b4513"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="OR"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/scancode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Scan QR Code /Bar Code"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip" >

                <Button
                    android:id="@+id/savematerial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"

                    android:text="Save &amp; Continue" />

                <Button
                    android:id="@+id/addmorematerial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Add More" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/labourlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/list_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip" android:visibility="gone"
            android:paddingRight="5dip"
            android:paddingTop="5dip" >

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Labour"
                android:textColor="@color/textcolor"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"  android:paddingLeft="5dip"
                    android:text="Labour Type"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/labourname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"  android:paddingLeft="5dip"
                    android:text="Date"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/setmydatelbr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8" android:singleLine="true"

                        android:gravity="center" android:inputType="date"

                        android:textColor="@color/textcolor" />

                    <ImageView
                        android:id="@+id/lbrdate"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="0.2"
                        android:src="@drawable/gtc" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Number of Days"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/labourdays"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="12"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/ttl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Wages"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/lobourwages"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" android:inputType="numberDecimal" android:maxLength="12"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Paid By"  android:paddingLeft="5dip"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/labourpaidby"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#8b4513"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#8b4513"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"  android:id="@+id/labourtotalcostlay"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Total Cost"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/labourtotalcost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#8b4513"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip" >

                <Button
                    android:id="@+id/savelabour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"

                    android:text="Save &amp; Continue" />

                <Button
                    android:id="@+id/addmorelabour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Add More" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent" android:id="@+id/viewexpenselayout" android:visibility="gone"
            android:layout_height="fill_parent"
            android:orientation="vertical"   >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/sitenamedtlKKK"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Site Name"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/statusll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalcostkk"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total Cost"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/sitenamedtl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="test"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/statusdtl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalcostdtl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"  android:id="@+id/otherexpenselayout"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:background="@drawable/list_background"
            >
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Other Expense" android:textStyle="bold|italic"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >
                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Expense Name"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/otherexpname" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"  android:paddingLeft="5dip"
                    android:text="Date"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="horizontal" >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_weight="0.8"   android:inputType="date"
                android:ems="10"
                android:id="@+id/otheexpdate" />
                <ImageView
                    android:id="@+id/otherdate"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0.2"
                    android:src="@drawable/gtc" />
                </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2" >
                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Amount"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/amount" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip" >

                <Button
                    android:id="@+id/saveotherexpbtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"

                    android:text="Save &amp; Continue" />

                <Button
                    android:id="@+id/addmoreotherexp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Add More" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"    android:background="@drawable/list_background"          android:layout_height="wrap_content"
            android:orientation="vertical" >
        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent" android:weightSum="3"
            android:layout_height="wrap_content"    >
            <TextView
                android:text="Name"  android:textAppearance="?android:textAppearanceSmall" android:textColor="@color/textcolor"
                android:layout_width="match_parent" android:gravity="center" android:layout_weight="1"
                android:layout_height="wrap_content" android:textStyle="bold"
                />
            <TextView
                android:text="Date"  android:textAppearance="?android:textAppearanceSmall" android:textColor="@color/textcolor"
                android:layout_width="match_parent" android:gravity="center" android:layout_weight="1"  android:textStyle="bold"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textAppearance="?android:textAppearanceSmall" android:textColor="@color/textcolor"  android:textStyle="bold"
                android:layout_width="match_parent" android:gravity="center" android:text="Amount"  android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:weightSum="3"
                >

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent" android:layout_weight="1" android:gravity="center"
                    android:layout_height="wrap_content" android:enabled="false" android:textColor="@color/textcolor"
                    android:text="material name" android:maxLines="1"
                    android:textAppearance="?android:textAppearanceSmall" />
                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent" android:layout_weight="1" android:gravity="center"
                    android:layout_height="wrap_content" android:enabled="false" android:textColor="@color/textcolor"
                    android:text="date" android:maxLines="1" android:inputType="date"
                    android:textAppearance="?android:textAppearanceSmall" />
                <EditText
                    android:id="@+id/amount" android:layout_weight="1" android:maxLines="1" android:textColor="@color/textcolor"
                    android:layout_width="match_parent" android:text="amt" android:enabled="false" android:gravity="center"
                    android:layout_height="wrap_content" android:inputType="numberDecimal"


                    android:textAppearance="?android:textAppearanceSmall" />
                <ImageButton
                    android:layout_width="wrap_content" android:background="@drawable/edit"  android:id="@+id/editrecord"
                    android:layout_height="wrap_content"
                    />
                <ImageButton
                    android:layout_width="wrap_content" android:background="@drawable/delete"  android:id="@+id/deleterecord"
                    android:layout_height="wrap_content" android:visibility="gone"
                    />
                <ImageButton
                    android:layout_width="wrap_content" android:background="@drawable/save"  android:id="@+id/saverecord"
                    android:layout_height="wrap_content" android:visibility="gone"
                    />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>